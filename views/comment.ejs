<% post.comments.forEach(function(comment){ %>
    <p>
        <%= comment.name %>
        <span class="info">回复于<%= comment.time %></span>
    </p>
    <p><%- comment.content %></p>
<% }) %>
<% if(user) { %>
    <form method="post" action="/comment/<%= post.name %>/<%= post.time.minute %>/<%= post.title %>">
        发布人:<%= user.name %>
        <input type="hidden" name="name" value="<%= user.name %>">
        <textarea name="content" rows="10" cols="100"></textarea>
        <input type="submit" value="提交">
    </form>
<% }else{ %>
    <form method="post">
        回应请先<a href="/login">登录</a>或者<a href="/reg">注册</a>
        <textarea name="content" rows="10" cols="100" id="tb"></textarea>
        <input type="submit" value="提交" id="sb">
    </form>
<% } %>
<script>
    window.onload = function(){
        var button = document.querySelector('#sb');
        var textarea = document.querySelector('#tb');
        button.onclick = function(e){
            e.preventDefault();
            location.href = '/login';
        }
        textarea.onfocus = function(e){
            e.preventDefault();
            location.href = '/login';
        }
    }
</script>


